block content
  .l-center-narrow
    h1.title
      b Create your Cubits bitcoin wallet

    form.form.form_sign-in
      .form__column
        .form__group
          .field
            input.input(type="text", placeholder="First name")
            span.error-msg
              | Field is required
          .field
            input.input(type="text", placeholder="Last name")
            span.error-msg
              | Field is required
          p.form__text
            | Please enter your real name to perform financial operations

        .form__group
          .field
            input.input(type="email", placeholder="Email")
            span.error-msg
